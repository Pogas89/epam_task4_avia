<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

    <servlet>
        <servlet-name>UserListController</servlet-name>
        <servlet-class>by.epam.ivanov.aviacompany.controller.UserListController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserListController</servlet-name>
        <url-pattern>/admin/userlist.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserEditController</servlet-name>
        <servlet-class>by.epam.ivanov.aviacompany.controller.UserEditController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserEditController</servlet-name>
        <url-pattern>/admin/useredit.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserSaveController</servlet-name>
        <servlet-class>by.epam.ivanov.aviacompany.controller.UserSaveController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserSaveController</servlet-name>
        <url-pattern>/admin/usersave.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StaffListController</servlet-name>
        <servlet-class>by.epam.ivanov.aviacompany.controller.StaffListController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StaffListController</servlet-name>
        <url-pattern>/admin/stafflist.html</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>by.epam.ivanov.aviacompany.util.Log4jInit</listener-class>
    </listener>
    
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.epam.ivanov.aviacompany.controller.filters.CharsetEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

</web-app>